rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthorized() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role != null;
    }

    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Surveys: public read (registration form), admin write
    match /surveys/{surveyId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Survey responses: public create/read (registration), guarded update, admin delete
    match /survey_responses/{responseId} {
      allow create: if true
        && request.resource.data.email is string && request.resource.data.email.size() <= 200
        && request.resource.data.surveyId is string
        && request.resource.data.personalCode is string && request.resource.data.personalCode.size() == 8;
      allow read: if true;
      allow update: if true
        && request.resource.data.surveyId == resource.data.surveyId
        && request.resource.data.personalCode == resource.data.personalCode
        && request.resource.data.email == resource.data.email;
      allow delete: if isAdmin();
    }

    // Participants: public create (registration), authorized for everything else
    match /participants/{participantId} {
      allow create: if true
        && request.resource.data.name is string && request.resource.data.name.size() <= 100
        && request.resource.data.email is string && request.resource.data.email.size() <= 200
        && request.resource.data.checkIns is list && request.resource.data.checkIns.size() == 0
        && request.resource.data.groupId == ''
        && request.resource.data.roomId == '';
      allow read, update, delete: if isAuthorized();
    }

    // Registration admin list: any authenticated user can read, registration admins can write
    match /registration_admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        exists(/databases/$(database)/documents/registration_admins/$(request.auth.token.email));
    }

    // Users: own document read/create/update (cannot change role), admin can update role
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId
        && !('role' in request.resource.data);
      allow update: if request.auth != null && request.auth.uid == userId
        && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role);
      allow read: if isAuthorized();
      allow update: if isAdmin();
    }

    // ─── Apply App Collections ────────────────────────────────────────
    function applyUserRole() {
      return get(/databases/$(database)/documents/apply_users/$(request.auth.uid)).data.role;
    }

    function isApplyAdmin() {
      return applyUserRole() == 'admin';
    }

    function isApplyAdminOrSessionLeader() {
      return applyUserRole() in ['admin', 'session_leader'];
    }

    function isApplyLeader() {
      return applyUserRole() in ['bishop', 'stake_president'];
    }

    function isApplyApprovedLeader() {
      return isApplyLeader()
        && get(/databases/$(database)/documents/apply_users/$(request.auth.uid)).data.leaderStatus == 'approved';
    }

    // Apply - Users
    match /apply_users/{userId} {
      allow read: if request.auth != null
        && (request.auth.uid == userId || isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isApplyAdmin();
      allow delete: if isApplyAdmin();
    }

    // Apply - Applications
    match /apply_applications/{applicationId} {
      allow read: if request.auth != null
        && (
          resource.data.userId == request.auth.uid
          || isApplyAdminOrSessionLeader()
          || isApplyApprovedLeader()
        );
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null
        && (
          resource.data.userId == request.auth.uid
          || isApplyAdminOrSessionLeader()
        )
        && resource.data.status != 'approved'
        && resource.data.status != 'rejected';
      allow delete: if isApplyAdmin();
    }

    // Apply - Recommendations
    match /apply_recommendations/{recommendationId} {
      allow read: if request.auth != null
        && (
          resource.data.leaderId == request.auth.uid
          || isApplyAdminOrSessionLeader()
          || isApplyApprovedLeader()
        );
      allow create: if request.auth != null
        && (isApplyApprovedLeader() || isApplyAdminOrSessionLeader());
      allow update: if request.auth != null
        && (
          resource.data.leaderId == request.auth.uid
          || isApplyAdminOrSessionLeader()
        )
        && resource.data.status != 'approved'
        && resource.data.status != 'rejected';
      allow delete: if request.auth != null
        && (
          resource.data.leaderId == request.auth.uid
          || isApplyAdmin()
        )
        && resource.data.status != 'approved'
        && resource.data.status != 'rejected';
    }

    // Apply - Memos (Application Comments)
    match /apply_memos/{memoId} {
      allow read: if request.auth != null
        && (isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth != null
        && (isApplyApprovedLeader() || isApplyAdminOrSessionLeader())
        && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null
        && resource.data.authorId == request.auth.uid;
      allow delete: if request.auth != null
        && resource.data.authorId == request.auth.uid;
    }

    // Apply - Recommendation Comments
    match /apply_recommendation_comments/{commentId} {
      allow read: if request.auth != null
        && (isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth != null
        && (isApplyApprovedLeader() || isApplyAdminOrSessionLeader())
        && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null
        && resource.data.authorId == request.auth.uid;
      allow delete: if request.auth != null
        && resource.data.authorId == request.auth.uid;
    }

    // Apply - Stake/Ward Change Requests
    match /apply_stakeWardChangeRequests/{requestId} {
      allow read: if request.auth != null
        && (isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update: if isApplyAdmin();
    }

    // All other collections: authorized users (admin + staff)
    match /{document=**} {
      allow read, write: if isAuthorized();
    }
  }
}
