rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthorized() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/checkin_admins/$(request.auth.token.email));
    }

    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/checkin_admins/$(request.auth.token.email)) &&
        get(/databases/$(database)/documents/checkin_admins/$(request.auth.token.email)).data.role != 'staff';
    }

    // Surveys: public read (registration form), admin write
    match /surveys/{surveyId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Survey responses: public create/read (registration), guarded update, admin delete
    match /survey_responses/{responseId} {
      allow create: if true
        && request.resource.data.email is string && request.resource.data.email.size() <= 200
        && request.resource.data.surveyId is string
        && request.resource.data.personalCode is string && request.resource.data.personalCode.size() == 8;
      allow read: if true;
      allow update: if true
        && request.resource.data.surveyId == resource.data.surveyId
        && request.resource.data.personalCode == resource.data.personalCode
        && request.resource.data.email == resource.data.email;
      allow delete: if isAdmin();
    }

    // Participants: public create (registration), authorized for everything else
    match /participants/{participantId} {
      allow create: if true
        && request.resource.data.name is string && request.resource.data.name.size() <= 100
        && request.resource.data.email is string && request.resource.data.email.size() <= 200
        && request.resource.data.checkIns is list && request.resource.data.checkIns.size() == 0
        && request.resource.data.groupId == ''
        && request.resource.data.roomId == '';
      allow read, update, delete: if isAuthorized();
    }

    // Checkin admin list: any authenticated user can read (needed for auth check), admin only write
    match /checkin_admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Registration admin list: any authenticated user can read, registration admins can write
    match /registration_admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        exists(/databases/$(database)/documents/registration_admins/$(request.auth.token.email));
    }

    // Users: authenticated users can read/create/update their own document, authorized users can read all
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow read: if isAuthorized();
    }

    // All other collections: authorized users (admin + staff)
    match /{document=**} {
      allow read, write: if isAuthorized();
    }
  }
}
