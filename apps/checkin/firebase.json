{
  "hosting": {
    "site": "checkin-ba4b8",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "checkin",
      "ignore": ["node_modules", ".git"],
      "predeploy": ["npm --prefix functions run build"]
    }
  ]
}
