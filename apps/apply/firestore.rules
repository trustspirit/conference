rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function applyUserRole() {
      return get(/databases/$(database)/documents/apply_users/$(request.auth.uid)).data.role;
    }

    function isApplyAdmin() {
      return applyUserRole() == 'admin';
    }

    function isApplyAdminOrSessionLeader() {
      return applyUserRole() in ['admin', 'session_leader'];
    }

    function isApplyLeader() {
      return applyUserRole() in ['bishop', 'stake_president'];
    }

    function isApplyApprovedLeader() {
      return isApplyLeader()
        && get(/databases/$(database)/documents/apply_users/$(request.auth.uid)).data.leaderStatus == 'approved';
    }

    // Apply - Users
    match /apply_users/{userId} {
      allow read: if request.auth != null
        && (request.auth.uid == userId || isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isApplyAdmin();
      allow delete: if isApplyAdmin();
    }

    // Apply - Applications
    match /apply_applications/{applicationId} {
      allow read: if request.auth != null
        && (
          resource.data.userId == request.auth.uid
          || isApplyAdminOrSessionLeader()
          || isApplyApprovedLeader()
        );
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null
        && (
          resource.data.userId == request.auth.uid
          || isApplyAdminOrSessionLeader()
        )
        && resource.data.status != 'approved'
        && resource.data.status != 'rejected';
      allow delete: if isApplyAdmin();
    }

    // Apply - Recommendations
    match /apply_recommendations/{recommendationId} {
      allow read: if request.auth != null
        && (
          resource.data.leaderId == request.auth.uid
          || isApplyAdminOrSessionLeader()
          || isApplyApprovedLeader()
        );
      allow create: if request.auth != null
        && (isApplyApprovedLeader() || isApplyAdminOrSessionLeader());
      allow update: if request.auth != null
        && (
          resource.data.leaderId == request.auth.uid
          || isApplyAdminOrSessionLeader()
        )
        && resource.data.status != 'approved'
        && resource.data.status != 'rejected';
      allow delete: if request.auth != null
        && (
          resource.data.leaderId == request.auth.uid
          || isApplyAdmin()
        )
        && resource.data.status != 'approved'
        && resource.data.status != 'rejected';
    }

    // Apply - Memos (Application Comments)
    match /apply_memos/{memoId} {
      allow read: if request.auth != null
        && (isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth != null
        && (isApplyApprovedLeader() || isApplyAdminOrSessionLeader())
        && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null
        && resource.data.authorId == request.auth.uid;
      allow delete: if request.auth != null
        && resource.data.authorId == request.auth.uid;
    }

    // Apply - Recommendation Comments
    match /apply_recommendation_comments/{commentId} {
      allow read: if request.auth != null
        && (isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth != null
        && (isApplyApprovedLeader() || isApplyAdminOrSessionLeader())
        && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null
        && resource.data.authorId == request.auth.uid;
      allow delete: if request.auth != null
        && resource.data.authorId == request.auth.uid;
    }

    // Apply - Stake/Ward Change Requests
    match /apply_stakeWardChangeRequests/{requestId} {
      allow read: if request.auth != null
        && (isApplyAdminOrSessionLeader() || isApplyApprovedLeader());
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update: if isApplyAdmin();
    }
  }
}
