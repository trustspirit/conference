rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Survey header images: authenticated admin upload only, public read
    match /surveys/{surveyId}/header.{ext} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.contentType.matches('image/(jpeg|png)')
        && request.resource.size < 1.5 * 1024 * 1024;
    }

    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
