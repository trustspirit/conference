rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Surveys: authenticated users can CRUD, anyone can read
    match /surveys/{surveyId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Survey responses: anyone can create (registration), authenticated users can read/update
    match /survey_responses/{responseId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // Participants: anyone can create (registration), authenticated users can read/update
    match /participants/{participantId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
  }
}
